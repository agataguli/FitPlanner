<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SportDetailsActivity">

        <!-- sport -->
        <TextView
            android:id="@+id/sport_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/commonMargin"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/commonMargin"
            android:text="@string/sport"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sport_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/commonMargin"
            android:layout_marginTop="@dimen/halfMargin"
            android:layout_marginEnd="@dimen/commonMargin"
            android:text="@string/sport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sport_tile" />

        <!-- kcals-->
        <TextView
            android:id="@+id/kcal_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/commonMargin"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/commonMargin"
            android:text="@string/kcalTileLong"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sport_content" />

        <TextView
            android:id="@+id/kcal_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/commonMargin"
            android:layout_marginTop="@dimen/halfMargin"
            android:layout_marginEnd="@dimen/commonMargin"
            android:text="@string/sport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kcal_tile" />

        <!-- image -->
        <ImageView
            android:id="@+id/sport_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/commonMargin"
            android:layout_marginTop="@dimen/commonMargin"
            android:layout_marginEnd="@dimen/commonMargin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kcal_content" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_remove_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:layout_marginTop="@dimen/commonMargin"
            android:layout_marginEnd="@dimen/commonMargin"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>